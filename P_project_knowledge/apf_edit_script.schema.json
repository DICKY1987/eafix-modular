{
  "$id": "https://example.com/schemas/apf_edit_script.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "APF Change Request (Edit Script)",
  "type": "object",
  "required": [
    "change_id",
    "title",
    "author",
    "created_utc",
    "target_file",
    "ops"
  ],
  "properties": {
    "change_id": {
      "type": "string",
      "description": "Stable identifier. Suggested format: CR-YYYYMMDD-HHMMSS-slug",
      "pattern": "^CR-\\d{8}-\\d{6}-[a-z0-9-]+$"
    },
    "title": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "created_utc": {
      "type": "string",
      "format": "date-time"
    },
    "target_file": {
      "type": "string",
      "description": "Path to the master YAML to edit"
    },
    "rationale": {
      "type": "string"
    },
    "apf_schema_version": {
      "type": "string",
      "description": "Version of the master YAML schema this CR targets"
    },
    "preconditions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "expected_master_sha256": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$"
        },
        "expected_stepkey_precision": {
          "type": "integer",
          "minimum": 0,
          "maximum": 9
        }
      }
    },
    "ops": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "op",
          "op_id"
        ],
        "additionalProperties": false,
        "properties": {
          "op_id": {
            "type": "string",
            "description": "Local op identifier for audit logs (e.g., op-001)",
            "pattern": "^op-\\d{3,}$"
          },
          "op": {
            "type": "string",
            "enum": [
              "insert_step_after",
              "insert_step_before",
              "update_field",
              "delete_step",
              "move_step",
              "set_metadata",
              "set_registry_item",
              "finalize_renumber"
            ]
          },
          "comment": {
            "type": "string"
          },
          "target_step": {
            "type": "string",
            "description": "StepKey of target step (e.g., 1.001)"
          },
          "field": {
            "type": "string",
            "description": "Field to update for update_field op (JSON Pointer allowed)"
          },
          "value": {
            "description": "New value for update_field or set_* ops"
          },
          "step": {
            "type": "object",
            "description": "Step object for insert operations (partial allowed; sequencer fills step_id)"
          },
          "new_parent": {
            "type": "string",
            "description": "New parent StepKey for move_step"
          },
          "precision": {
            "type": "integer",
            "minimum": 0,
            "maximum": 9,
            "description": "Precision used in finalize_renumber"
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "op": {
                  "const": "insert_step_after"
                }
              }
            },
            "then": {
              "required": [
                "target_step",
                "step"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "op": {
                  "const": "insert_step_before"
                }
              }
            },
            "then": {
              "required": [
                "target_step",
                "step"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "op": {
                  "const": "update_field"
                }
              }
            },
            "then": {
              "required": [
                "target_step",
                "field",
                "value"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "op": {
                  "const": "delete_step"
                }
              }
            },
            "then": {
              "required": [
                "target_step"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "op": {
                  "const": "move_step"
                }
              }
            },
            "then": {
              "required": [
                "target_step",
                "new_parent"
              ]
            }
          },
          {
            "if": {
              "properties": {
                "op": {
                  "const": "finalize_renumber"
                }
              }
            },
            "then": {
              "required": [
                "precision"
              ]
            }
          }
        ]
      }
    },
    "signing": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sha256_of_ops": {
          "type": "string",
          "pattern": "^[A-Fa-f0-9]{64}$"
        },
        "gpg_fingerprint": {
          "type": "string"
        },
        "signature_detached_ascii_armor": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}
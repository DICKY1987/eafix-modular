{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Signal",
  "version": "1.0",
  "description": "Trading signal generated from indicators and rules",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique signal identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "UTC timestamp of signal generation"
    },
    "symbol": {
      "type": "string",
      "pattern": "^[A-Z]{6}$",
      "description": "Currency pair symbol"
    },
    "side": {
      "type": "string",
      "enum": ["BUY", "SELL"],
      "description": "Trading direction"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Signal confidence score (0-1)"
    },
    "explanation": {
      "type": "string",
      "description": "Optional explanation of signal logic"
    },
    "source_indicators": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of indicators used for this signal"
    },
    "expiry": {
      "type": "string",
      "format": "date-time",
      "description": "Signal expiry timestamp"
    }
  },
  "required": ["id", "timestamp", "symbol", "side", "confidence"],
  "additionalProperties": false
}
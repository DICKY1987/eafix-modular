{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://eafix.local/schemas/counter_store.schema.json",
  "title": "Counter Store Schema",
  "description": "Schema for the identity system counter store that tracks allocated sequence numbers",
  "type": "object",
  "required": ["schema_version", "counters", "last_updated"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version for forward compatibility"
    },
    "counters": {
      "type": "object",
      "description": "Map of counter keys to their current sequence values",
      "additionalProperties": {
        "type": "integer",
        "minimum": 0,
        "maximum": 99999,
        "description": "5-digit sequence counter value"
      },
      "propertyNames": {
        "pattern": "^[0-9]{3}_[0-9]{2}_[0-9]{6}$",
        "description": "Counter key format: NS_TYPE_SCOPE (e.g., 100_20_260118)"
      }
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last counter update"
    }
  },
  "examples": [
    {
      "schema_version": "1.0",
      "counters": {
        "100_20_260118": 42,
        "200_01_260118": 15
      },
      "last_updated": "2026-01-18T20:59:00Z"
    }
  ]
}
